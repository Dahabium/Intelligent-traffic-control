                        <TextField fx:id="StartInput" alignment="CENTER" prefHeight="31.0" prefWidth="38.0" promptText="1" />
                     </graphic></Button>
                  <Button fx:id="setCarEndbtn" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#setCarEnd" prefHeight="41.0" prefWidth="110.0" text="End">
